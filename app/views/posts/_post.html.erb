<div class="card">
  <%= link_to image_tag(post.image, class: :card__img ), post_path(post)%>
  
  <div class="card__body">  
    <%= link_to post.title, root_path, class: :card__title%>
  
    <p class="card__summary">
      <%= post.detail %>
    </p>    
    <%= link_to "by #{post.user.name}", root_path, class: :card__user %>
  </div>
</div>