<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%#= render "devise/shared/error_messages", resource: resource %>

        <div class="field">
          <%= f.label :name, "name" %><br />
          <%= f.text_field :name, id:"user_name" %>
        </div>

        <div class="field">
          <%= f.label :username, "username" %><br />
          <%= f.text_field :username, id:"user_username" %>
        </div>

        <div class="field">
          <%= f.label :email, "email" %><br />
          <%= f.email_field :email, id:"user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "password" %><br />
          <%= f.password_field :password, id:"user_password", autocomplete: "new-password" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign Up", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>