
<% if user_signed_in? && post.liked_by?(current_user)%>
 <%= link_to post_like_path(post.id), method: :delete do %>
   <i class="fas fa-heart"></i>
 <% end %>
  <%= post.likes.count %>
<% else %>
 <%= link_to post_likes_path(post.id), method: :post do %>
   <i class="far fa-heart"></i>
 <% end %>
  <%= post.likes.count %>  
<% end %>